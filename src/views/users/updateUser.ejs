<!DOCTYPE html>
<html>
<head><title>Update User</title></head>
<body>
  <h1>Update: <%= user.firstName %> <%= user.lastName %></h1>
  <form method="POST" action="/update-user">
    <input type="hidden" name="id" value="<%= user.id %>" />
    <input name="firstName" value="<%= user.firstName %>" required />
    <input name="lastName"  value="<%= user.lastName %>" required />
    <input name="email"     value="<%= user.email %>" type="email" required />
    <input name="address"   value="<%= user.address || '' %>" />
    <button type="submit">Save</button>
  </form>
  <p><a href="/users">Back</a></p>
</body>
</html>
